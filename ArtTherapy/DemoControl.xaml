<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:custom="using:ArtTherapy"
    xmlns:converters="using:ArtTherapyCore.ValueConverters"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls">
    
    <converters:VisibilityInverseConverter x:Key="visibilityInverseConverter"/>
    <converters:VisibilityConverter x:Key="visibilityConverter"/>
    <converters:UInt32Converter x:Key="uint32Converter"/>
    <converters:Int32Converter x:Key="int32Converter"/>
    <converters:StringProConverter x:Key="stringProConverter"/>
    <converters:PriceConverter x:Key="priceConverter"/>

    <Style TargetType="custom:DemoControl">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="custom:DemoControl">
                        <Grid>
                            <Grid x:Name="RootGrid" Margin="0" Background="{x:Null}" MaxWidth="200"
                                  Visibility="Collapsed">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto" MaxHeight="158"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <!--Картинка-->
                                <controls:ImageEx x:Name="ProductImage" Grid.Row="0" Grid.RowSpan="2" Stretch="Uniform" Background="{x:Null}"
                                    Source="{Binding ImageUrl}" IsCacheEnabled="False"
                                    Visibility="Collapsed"/>
                                <ProgressRing Grid.Row="0" Grid.RowSpan="2" Height="30" Width="30" BorderBrush="Gray" Foreground="Black"
                                    HorizontalAlignment="Center" VerticalAlignment="Center"
                                    IsActive="{Binding IsLoadingImage}" Background="{x:Null}"/>
                                <!--Название-->
                                <Border x:Name="ProductNameBorder" Grid.Row="1" Background="Black" Opacity="0.7" MaxHeight="100"
                                    Visibility="Collapsed"/>
                                <TextBlock x:Name="ProductName" Grid.Row="1" FontSize="13" Margin="4,7" TextAlignment="Left" TextWrapping="Wrap" Foreground="White"
                                    HorizontalAlignment="Left" VerticalAlignment="Center"
                                    Text="{Binding Name, Converter={StaticResource stringProConverter}}"
                                    Visibility="Collapsed"/>
                                <!--Цена и кнопка покупки-->
                                <Grid x:Name="ProductPriceBorder" Grid.Row="2" Background="{StaticResource Static.Grid.Background}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <!--Цена базовая-->
                                    <Viewbox Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Stretch" Stretch="Fill" StretchDirection="DownOnly">
                                        <TextBlock x:Name="ProductPrice" Margin="4,5" FontSize="18" TextAlignment="Left" TextWrapping="WrapWholeWords"
                                            HorizontalAlignment="Left" VerticalAlignment="Top"
                                            Text="{Binding Price, Converter={StaticResource priceConverter}}"
                                            Visibility="Collapsed"/>
                                    </Viewbox>

                                    <Grid x:Name="ProductDiscountPrice" Grid.Column="0" 
                                            VerticalAlignment="Top" HorizontalAlignment="Stretch"
                                            Visibility="Collapsed">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <!--Цена с скидкой-->
                                        <Viewbox Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Stretch" Stretch="Fill" StretchDirection="DownOnly">
                                            <Grid>
                                                <TextBlock x:Name="priceTextBlock" Margin="4,5" FontSize="13" TextAlignment="Left" TextWrapping="WrapWholeWords" VerticalAlignment="Center"
                                                    Text="{Binding Price, Converter={StaticResource priceConverter}}"/>
                                                <Rectangle x:Name="discountPriceTextBlock" Margin="4,5" Height="1" Width="{Binding ElementName=priceTextBlock, Path=Width}" Fill="Black" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Viewbox>
                                        <Viewbox Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Stretch" Stretch="Fill" StretchDirection="DownOnly">
                                            <TextBlock Margin="2,5" FontSize="16" TextAlignment="Left" TextWrapping="WrapWholeWords" VerticalAlignment="Center"
                                                Text="{Binding DiscountPrice, Converter={StaticResource priceConverter}}"/>
                                        </Viewbox>
                                    </Grid>
                                    <ProgressRing Grid.Column="0" Margin="4,5" Width="15" Height="15" BorderBrush="Gray" Foreground="Black"
                                        HorizontalAlignment="Left" VerticalAlignment="Center"
                                        IsActive="{Binding IsLoadingPrice}"/>
                                    <!--Кнопка покупки-->
                                    <Button x:Name="ProductTrueBuy" Grid.Column="1" Margin="0,5" Width="30" Height="30"
                                        HorizontalAlignment="Right" VerticalAlignment="Top"
                                        Visibility="Collapsed">
                                        <Button.Content>
                                            <Image Stretch="Uniform" Source="/Assets/trolley-cart1@3x.png"/>
                                        </Button.Content>
                                    </Button>
                                    <Button x:Name="ProductFalseBuy" Grid.Column="1" Margin="0,5" Width="30" Height="30" IsEnabled="False"
                                        HorizontalAlignment="Right" VerticalAlignment="Top"
                                        Visibility="Visible">
                                        <Button.Content>
                                            <Image Stretch="Uniform" Source="/Assets/icon-empty-shopping-cart@3x.png"/>
                                        </Button.Content>
                                    </Button>
                                </Grid>
                                <Grid x:Name="ProductDiscountPriceBorder" Grid.Row="3" Background="{StaticResource Static.Grid.Background}"
                                    VerticalAlignment="Center" HorizontalAlignment="Stretch"
                                    Visibility="Collapsed">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Margin="0,5" Background="Yellow"/>
                                    <Viewbox Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Stretch" Stretch="Fill" StretchDirection="DownOnly">
                                        <TextBlock Margin="4,5" FontSize="13" Foreground="DarkGray" TextAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center"
                                                Text="{Binding PriceDifference, Converter={StaticResource int32Converter}}"/>
                                    </Viewbox>
                                    <Viewbox Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Stretch" Stretch="Fill" StretchDirection="DownOnly">
                                        <TextBlock Margin="4,5" FontSize="13" Foreground="DarkGray" TextAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center"
                                                Text="экономия"/>
                                    </Viewbox>
                                </Grid>
                                <!--Остатки-->
                                <Grid x:Name="ProductRemainsBorder" Grid.Row="4" Background="{StaticResource Static.Grid.Background}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel x:Name="ProductRemains" Grid.Row="0" Margin="4,2" Orientation="Horizontal"
                                            Visibility="Collapsed">
                                        <Image Width="14" Height="16" Margin="0,2,0,-2" Source="/Assets/packed-box@3x.png" Stretch="Uniform"/>
                                        <TextBlock FontSize="13" Foreground="DarkGray" Margin="4,0" TextAlignment="Left" TextWrapping="Wrap"
                                            HorizontalAlignment="Left" VerticalAlignment="Center"
                                            Text="{Binding Remains, Converter={StaticResource uint32Converter}}"/>
                                    </StackPanel>
                                    <StackPanel x:Name="ProductNoRemains" Grid.Row="0" Margin="4,2" Orientation="Horizontal"
                                            Visibility="Collapsed">
                                        <Image Width="14" Height="16" Margin="0,2,0,-2" Source="/Assets/icon-no-item@3x.png" Stretch="Uniform"/>
                                        <TextBlock FontSize="13" Foreground="DarkGray" Margin="4,0" TextAlignment="Left" TextWrapping="Wrap"
                                            HorizontalAlignment="Left" VerticalAlignment="Center"
                                            Text="Товар распродан"/>
                                    </StackPanel>
                                    <ProgressRing Grid.Row="0" Margin="4,5" Width="15" Height="15" BorderBrush="Gray" Foreground="Black"
                                        HorizontalAlignment="Left" VerticalAlignment="Center"
                                        IsActive="{Binding IsLoadingRemains}"/>
                                    <StackPanel x:Name="ProductSku" Grid.Row="1" Margin="4,2"
                                            Visibility="Collapsed">
                                        <TextBlock  FontSize="13" Foreground="DarkGray" TextAlignment="Left" TextWrapping="Wrap"
                                            Text="{Binding Sku, Converter={StaticResource uint32Converter}}"
                                            HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                            <Border x:Name="ProductBorder" Grid.RowSpan="4" Background="{x:Null}" BorderBrush="#FFE2E2E2" BorderThickness="1"
                                    Visibility="Collapsed"/>
                            <ProgressRing Height="50" Width="50" BorderBrush="Gray" Foreground="Black"
                                    HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-50, 0, 50"
                                    IsActive="{Binding IsLoading}" Background="{x:Null}"/>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="MainLoadingGroup">
                                    <VisualState x:Name="Loading">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootGrid"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Collapsed</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductImage"
                                                                       Storyboard.TargetProperty="Visibility">
