<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:custom="using:ArtTherapy"
    xmlns:converters="using:ArtTherapyCore.ValueConverters"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls">
    
    <converters:VisibilityInverseConverter x:Key="visibilityInverseConverter"/>
    <converters:VisibilityConverter x:Key="visibilityConverter"/>
    <converters:Int32Converter x:Key="int32Converter"/>
    <converters:StringProConverter x:Key="stringProConverter"/>
    <converters:PriceConverter x:Key="priceConverter"/>
    <converters:RemainsConverter x:Key="remainsConverter"/>

    <Style TargetType="custom:DemoControl">
        <Style.Setters>
            <Setter Property="Background" Value="{StaticResource Static.Grid.Background}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="custom:DemoControl">
                        <Grid x:Name="Root" Height="288" Background="{TemplateBinding Background}">
                            <Grid x:Name="RootGrid"
                                  Visibility="Collapsed">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <!--Картинка-->
                                <controls:ImageEx x:Name="ProductImage" Grid.Row="0" Grid.RowSpan="2" Stretch="UniformToFill" Background="{x:Null}"
                                    Source="{Binding ImageUrl}" IsCacheEnabled="True" Height="110" VerticalAlignment="Top"
                                    Visibility="Collapsed"/>
                                <Border x:Name="ProgressRingImage" Grid.Row="0" Height="110">
                                    <ProgressRing Grid.Row="0" Height="30" Width="30" BorderBrush="Gray" Foreground="Black"
                                        HorizontalAlignment="Center" VerticalAlignment="Center"
                                        IsActive="{Binding IsLoadingImage}" Background="{x:Null}"/>
                                </Border>
                                <!--Название-->
                                <Border x:Name="ProductNameBorder" Grid.Row="1" Grid.RowSpan="1" Height="50" Background="Black" Opacity="0.7"
                                    Visibility="Collapsed" VerticalAlignment="Top"/>
                                <TextBlock x:Name="ProductName" Grid.Row="1" Grid.RowSpan="1" Height="50" FontSize="12" Margin="4,2" TextAlignment="Left" TextWrapping="Wrap" Foreground="White"
                                    HorizontalAlignment="Left" MaxLines="3"
                                    Text="{Binding Name, Converter={StaticResource stringProConverter}}"
                                    Visibility="Collapsed" VerticalAlignment="Top"/>
                                <!--Цена и кнопка покупки-->
                                <Grid x:Name="ProductPriceBorder" Grid.Row="2" Background="{StaticResource Static.Grid.Background}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <!--Цена базовая-->
                                    <Viewbox Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Stretch" Stretch="Fill" StretchDirection="DownOnly">
                                        <TextBlock x:Name="ProductPrice" Margin="4,5" FontSize="18" TextAlignment="Left" TextWrapping="WrapWholeWords"
                                            HorizontalAlignment="Left" VerticalAlignment="Top"
                                            Text="{Binding Price, Converter={StaticResource priceConverter}}"
                                            Visibility="Collapsed"/>
                                    </Viewbox>

                                    <Grid x:Name="ProductDiscountPrice" Grid.Column="0" 
                                            VerticalAlignment="Center" HorizontalAlignment="Stretch"
                                            Visibility="Collapsed">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <!--Цена с скидкой-->
                                        <Viewbox Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Stretch" Stretch="Fill" StretchDirection="DownOnly">
                                            <Grid>
                                                <TextBlock x:Name="priceTextBlock" Margin="4,5" FontSize="13" TextAlignment="Left" TextWrapping="WrapWholeWords" VerticalAlignment="Center"
                                                    Text="{Binding Price, Converter={StaticResource priceConverter}}"/>
                                                <Rectangle x:Name="discountPriceTextBlock" Margin="4,5" Height="1" Width="{Binding ElementName=priceTextBlock, Path=Width}" Fill="Black" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Viewbox>
                                        <Viewbox Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Stretch" Stretch="Fill" StretchDirection="DownOnly">
                                            <TextBlock Margin="2,5" FontSize="18" TextAlignment="Left" TextWrapping="WrapWholeWords" VerticalAlignment="Center"
                                                Text="{Binding DiscountPrice, Converter={StaticResource priceConverter}}"/>
                                        </Viewbox>
                                    </Grid>
                                    <ProgressRing Grid.Column="0" Margin="4,5" Width="15" Height="15" BorderBrush="Gray" Foreground="Black"
                                        HorizontalAlignment="Left" VerticalAlignment="Center"
                                        IsActive="{Binding IsLoadingPrice}"/>
                                    <!--Кнопка покупки-->
                                    <Button x:Name="ProductTrueBuy" Grid.Column="1" Margin="0,5" Width="32" Height="32"
                                        HorizontalAlignment="Right" VerticalAlignment="Top"
                                        Visibility="Collapsed">
                                        <Button.Content>
                                            <Image Stretch="Uniform" Source="/Assets/trolley-cart1@3x.png"/>
                                        </Button.Content>
                                        <!--<Button.Flyout>
                                            <MenuFlyout Placement="Bottom">
                                                <ToggleMenuFlyoutItem x:Name="checkX" IsChecked="True" Text="Фотография товара" />
                                                <MenuFlyoutSeparator />
                                                <MenuFlyoutSubItem Text="Добавить в...">
                                                    <MenuFlyoutItem Text="Добавить в сравнение"/>
                                                    <MenuFlyoutItem Text="Добавить в корзину"/>
                                                    <MenuFlyoutItem Text="Добавить в желаемые покупки"/>
                                                </MenuFlyoutSubItem>
                                                <MenuFlyoutSubItem Text="Отзывы">
                                                    <MenuFlyoutItem Text="Отзывы покупалей"/>
                                                    <MenuFlyoutItem Text="Отзывы продавцов"/>
                                                </MenuFlyoutSubItem>
                                                <MenuFlyoutSeparator />
                                                <MenuFlyoutItem Text="Выход"/>
                                            </MenuFlyout>
                                        </Button.Flyout>-->
                                    </Button>
                                    <Button x:Name="ProductFalseBuy" Grid.Column="1" Margin="0,5" Width="32" Height="32" IsEnabled="False"
                                        HorizontalAlignment="Right" VerticalAlignment="Top"
                                        Visibility="Visible">
                                        <Button.Content>
                                            <Image Stretch="Uniform" Source="/Assets/icon-empty-shopping-cart@3x.png"/>
                                        </Button.Content>
                                        
                                    </Button>
                                </Grid>
                                <Grid x:Name="ProductDiscountPriceBorder" Grid.Row="3" Background="{StaticResource Static.Grid.Background}"
                                    VerticalAlignment="Center" HorizontalAlignment="Stretch"
                                    Visibility="Collapsed">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Margin="0,5" Background="Yellow" VerticalAlignment="Top" Height="15"/>
                                    <Viewbox Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="Fill" StretchDirection="DownOnly">
                                        <TextBlock Margin="4,5" FontSize="13" Foreground="DarkGray" TextAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center"
                                                Text="{Binding PriceDifference, Converter={StaticResource int32Converter}}"/>
                                    </Viewbox>
                                    <Viewbox Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="Fill" StretchDirection="DownOnly">
                                        <TextBlock Margin="4,5" FontSize="13" Foreground="DarkGray" TextAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center"
                                                Text="экономия"/>
                                    </Viewbox>
                                </Grid>
                                <!--Остатки-->
                                <Grid x:Name="ProductRemainsBorder" Grid.Row="4" Background="{StaticResource Static.Grid.Background}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel x:Name="ProductRemains" Grid.Row="0" Margin="4,2" Orientation="Horizontal"
                                            Visibility="Collapsed">
                                        <Image Width="14" Height="16" Margin="0,2,0,-2" Source="/Assets/packed-box@3x.png" Stretch="Uniform"/>
                                        <TextBlock FontSize="13" Foreground="DarkGray" Margin="4,0" TextAlignment="Left" TextWrapping="Wrap"
                                            HorizontalAlignment="Left" VerticalAlignment="Center"
                                            Text="{Binding Remains, Converter={StaticResource remainsConverter}}"/>
                                    </StackPanel>
                                    <StackPanel x:Name="ProductNoRemains" Grid.Row="0" Margin="4,2" Orientation="Horizontal"
                                            Visibility="Collapsed">
                                        <Image Width="14" Height="16" Margin="0,2,0,-2" Source="/Assets/icon-no-item@3x.png" Stretch="Uniform"/>
                                        <TextBlock FontSize="13" Foreground="DarkGray" Margin="4,0" TextAlignment="Left" TextWrapping="Wrap"
                                            HorizontalAlignment="Left" VerticalAlignment="Center"
                                            Text="Товар распродан"/>
                                    </StackPanel>
                                    <ProgressRing Grid.Row="0" Margin="4,5" Width="15" Height="15" BorderBrush="Gray" Foreground="Black"
                                        HorizontalAlignment="Left" VerticalAlignment="Center"
                                        IsActive="{Binding IsLoadingRemains}"/>
                                </Grid>
                                <StackPanel x:Name="ProductSku" Grid.Row="5" Margin="4,2"
                                            Visibility="Collapsed">
                                    <TextBlock  FontSize="12" Foreground="DarkGray" TextAlignment="Left" TextWrapping="Wrap"
                                            Text="{Binding Sku}"
                                            HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                            <Grid x:Name="TriangleShape"  Width="32" Height="32" HorizontalAlignment="Right" VerticalAlignment="Top"
                                Visibility="Collapsed">
                                <Polygon Fill="#b3cccc" Points="32,0 0,0 32,32"/>
                                <Image Width="10" Height="10" Margin="7,-5,-7,5" HorizontalAlignment="Center" VerticalAlignment="Center" Source="/Assets/shape@3x.png" Stretch="Uniform"/>
                            </Grid>
                            <Border x:Name="ProductBorder" Background="{x:Null}" BorderBrush="#FFE2E2E2" BorderThickness="1"
                                    Visibility="Collapsed"/>
                            <TextBlock x:Name="NoneTextBlock"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    TextAlignment="Center"
                                    Visibility="Collapsed"
                                    Text="Данные отсутствуют"/>
                            <ProgressRing x:Name="RootProgress" Height="50" Width="50" BorderBrush="Gray" Foreground="Black"
                                    HorizontalAlignment="Center" VerticalAlignment="Center"
                                    IsActive="{Binding IsLoading}" Background="{x:Null}"/>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="TypeModelGroup">
                                    <VisualState x:Name="FullMode">
                                        <VisualState.Setters>
                                            <Setter Target="Root.Height" Value="288"/>
                                            <Setter Target="TriangleShape.Visibility" Value="Collapsed"/>
                                            <Setter Target="ProgressRingImage.Visibility" Value="Visible"/>
                                            <Setter Target="NoneTextBlock.Visibility" Value="Collapsed"/>
                                            <Setter Target="ProductImage.Visibility" Value="Visible"/>
                                        </VisualState.Setters>
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootGrid"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Visible</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="NoImageMode">
                                        <VisualState.Setters>
                                            <Setter Target="Root.Height" Value="175"/>
                                            <Setter Target="TriangleShape.Visibility" Value="Collapsed"/>
                                            <Setter Target="ProgressRingImage.Visibility" Value="Collapsed"/>
                                            <Setter Target="NoneTextBlock.Visibility" Value="Collapsed"/>
                                            <Setter Target="ProductImage.Visibility" Value="Collapsed"/>
                                        </VisualState.Setters>
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootGrid"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Visible</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="PriceMode">
                                        <VisualState.Setters>
                                            <Setter Target="Root.Height" Value="100"/>
                                            <Setter Target="TriangleShape.Visibility" Value="Visible"/>
                                            <Setter Target="ProgressRingImage.Visibility" Value="Collapsed"/>
                                            <Setter Target="NoneTextBlock.Visibility" Value="Collapsed"/>
                                            <Setter Target="ProductImage.Visibility" Value="Collapsed"/>
                                        </VisualState.Setters>
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootGrid"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Visible</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="None">
                                        <VisualState.Setters>
                                            <Setter Target="Root.Height" Value="175"/>
                                            <Setter Target="TriangleShape.Visibility" Value="Collapsed"/>
                                            <Setter Target="ProgressRingImage.Visibility" Value="Collapsed"/>
                                            <Setter Target="NoneTextBlock.Visibility" Value="Visible"/>
                                            <Setter Target="ProductImage.Visibility" Value="Collapsed"/>
                                        </VisualState.Setters>
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootGrid"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Collapsed</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="MainLoadingGroup">
                                    <VisualState x:Name="Loading">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootGrid"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Collapsed</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductImage"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Collapsed</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductNameBorder"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Collapsed</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductName"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Collapsed</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductTrueBuy"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Collapsed</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductFalseBuy"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Collapsed</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductRemains"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Collapsed</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductNoRemains"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Collapsed</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductSku"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Collapsed</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductBorder"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Collapsed</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Loaded">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootGrid"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Visible</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductImage"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Collapsed</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductNameBorder"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Visible</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductName"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Visible</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductTrueBuy"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Collapsed</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductFalseBuy"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Visible</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductRemains"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Collapsed</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductNoRemains"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Collapsed</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductSku"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Visible</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductBorder"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Visible</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="ImageLoadingGroup">
                                    <VisualState x:Name="ImageLoading">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductImage"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Collapsed</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductNameBorder"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Visible</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductName"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Visible</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="ImageLoaded">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductImage"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Visible</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductNameBorder"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Visible</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductName"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Visible</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="NoImageLoaded">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductImage"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Collapsed</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductNameBorder"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Visible</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductName"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Visible</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="DiscountPricesLoadingGroup">
                                    <VisualState x:Name="DiscountPricesLoading">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductPrice"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Collapsed</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductDiscountPrice"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Collapsed</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ProductDiscountPriceBorder"
                                                                       Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Collapsed</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="DiscountPricesLoaded">
