<Page
    x:Class="ArtTherapy.Pages.PostPages.PoetryPages.PoetryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:models="using:ArtTherapy.Models.PostModels"
    xmlns:ex="using:ArtTherapy.Extensions"
    mc:Ignorable="d" SizeChanged="Page_SizeChanged">
    
    <Page.Resources>
        <ex:VisibilityConverterReverse x:Key="visibilityConverterReverse"/>
    </Page.Resources>
    
    <Grid Background="{StaticResource Static.Grid.Background}">
        <ScrollViewer x:Name="scrollViewer" ViewChanged="ScrollViewer_ViewChanged">
            <Grid Background="White">
                <GridView x:Name="gridView" ItemsSource="{x:Bind _viewModel.PostModel.Items}">
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="models:CurrentPostModel">
                            <Grid Height="200" Width="170" Margin="5" Background="White">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10*"/>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <ProgressRing Height="50" Width="50" BorderBrush="Gray" Foreground="Gray" Background="White" Grid.RowSpan="5" HorizontalAlignment="Center" VerticalAlignment="Center"
                                              IsActive="{x:Bind IsLoading}"/>
                                <controls:ImageEx Grid.Row="0" Stretch="UniformToFill" Background="White"
                                                  Source="{x:Bind Text}"
                                                  Visibility="{x:Bind Path=IsLoading, Converter={StaticResource visibilityConverterReverse}}"/>
                                <Border Grid.Row="1" Background="LightGray"
                                        Visibility="{x:Bind Path=IsLoading, Converter={StaticResource visibilityConverterReverse}}">
                                    <TextBlock FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"
                                               Text="{x:Bind Name}"/>
                                </Border>
                                <Grid Grid.Row="2" Background="White"
                                      Visibility="{x:Bind Path=IsLoading, Converter={StaticResource visibilityConverterReverse}}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" FontSize="12"  TextWrapping="Wrap"
                                               Text="{x:Bind Description}"/>
                                    <Button Grid.Column="1" Width="50" Height="50" Background="Red">
                                        <Button.Content>
                                            <TextBlock FontSize="12" FontFamily="Segoe MDL2 Assets"
                                                       Text="{x:Bind BuyIcon}"/>
                                        </Button.Content>
                                    </Button>
                                </Grid>
                                <TextBlock Grid.Row="3" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Center" TextAlignment="Center"  TextWrapping="Wrap"
                                           Text="{x:Bind Id}"
                                           Visibility="{x:Bind Path=IsLoading, Converter={StaticResource visibilityConverterReverse}}"/>
                                <TextBlock Grid.Row="4" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Center" TextAlignment="Center"  TextWrapping="Wrap"
                                           Text="{x:Bind Type}"
                                           Visibility="{x:Bind Path=IsLoading, Converter={StaticResource visibilityConverterReverse}}"/>
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
